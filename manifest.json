{
    "name": "VictorOps Farkles",
    "version": "1.0.0",
    "manifest_version" : 2,
    "description": "Extension to add keyboard shortcuts and custom CSS to VictorOps",
    "permissions": [
        "https://portal.victorops.com/",
        "http://portal.vo.dev/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://portal.victorops.com/*",
                "*://portal.vo.dev/*"
            ],
            "js": [
                "jquery-2.1.3.min.js",
                "farkles.js"],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "toggle_people": {
            "suggested_key": {
                "default": "Alt+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Toggle users pane"
        }
    }
}
